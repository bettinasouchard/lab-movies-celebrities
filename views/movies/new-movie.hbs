<body class="movies">

<div class="cartes">
<h2>Add your movie</h2>
<form action="/movies/create" method="post">

  <label for="title">Title</label>
  <input type="text" name="title" placeholder="Movie name" />

  <label for="genre">Genre</label>
  <input type="text" name="genre" placeholder="Genre" />

  <label for="plot">Plot</label>
  <textarea type="text" name="plot" placeholder="What's the plot ?"></textarea> 

  <label for="cast">Cast</label>
  <select name="cast" id="cast" class="input" multiple>
        <option value="-1" disabled selected>please select a celebrity</option>
        {{#each celebrities}}
        <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
    </select>

  <button>Add</button>
</form>
</div>
</body>